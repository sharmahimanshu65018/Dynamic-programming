int max3(int a, int b, int c)
{
	if ((a > b) && (a > c))
	{
		return a;
	}
	else if ((b > a) && (b > c))
	{
		return b;
	}
	else
	{
		return c;
	}
}
/*************************code*********************************/

int path(vector<vector<char>>&v, int n, int m, int i, int j, vector<vector<long long>> &dpp)
{
	if ((i >= n) && (j >= n))
	{
		return 0;
	}
	if (dpp[i][j] != -1)
	{
		return dpp[i][j];
	}
	if ((i == n - 1) && (j == m - 1))
	{
		return 1;
	}
	long long x, y;
	x = 0;
	y = 0;
	if (((i + 1) < n) && (v[i + 1][j] == '.'))
	{
		y = path(v, n, m, i + 1, j, dpp);
	}

	if (((j + 1) < m) && (v[i][j + 1] == '.'))
	{
		x = path(v, n, m, i, j + 1, dpp);
	}

	return dpp[i][j] = ((x) % mod + (y) % mod) % mod;
}

void work()
{
	int n, m;
	
	vector<vector<char>>v;
	cin >> n >> m;
	for (int i = 0; i < n; i++)
	{
		vector<char>vec;
		for (int j = 0; j < m; j++)
		{
			char ch;
			cin >> ch;
			vec.pb(ch);
		}
		v.push_back(vec);
	}
	vector<vector<long long>> dpp(1001, (vector<long long>(1001, -1)));
	cout << path(v, n, m, 0, 0, dpp)<<endl;
	
}
int main()
{
	fast();
	int t;
	//cin >> t;
	t = 1;
	while (t--)
	{
		work();
		cout << endl;
	}
	return 0;
}
